<tool id="tassel4-plink2vcf" name="Plink to VCF" version="1.0.0">
	<description> </description>
	<command interpreter="perl">
		run_pipeline.pl -fork1 -plink -ped $pedFile -map $mapFile -export $out -exportType VCF -runfork1 
	</command>
	
	<inputs>
		<param name="pedFile" type="data" label="Plink ped File"/>
		<param name="mapFile" type="data" label="Plink Map File"/>
	</inputs>

	<outputs>
		<data name="out" format="vcf" label="VCF File: ${pedFile.name}"/>
	</outputs>
</tool>
